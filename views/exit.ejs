    <div class="main">

        <div class="main__top">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark topbar">
              <div class="container-fluid">
                <a class="navbar-brand" href="#">
                  <img src="favicon.ico" height="32vh" />
                  Microsoft Teams
                </a>
              </div>
            </nav>
        </div>

        <div class="main-center">
            <div class="center">
                <h2>You left the meeting</h2>
            </div>
            <div class="center">
                <form id="rejoin" action="/chat" method="POST">
                    <input type="hidden" name="type" value="enter">
                    <input type="hidden" name="roomId" value="<%= roomId%>">
                    <input type="hidden" name="userName" value="<%= userName%>">
                    <button class="btn" id="rejoin" type="submit">Rejoin Room</button>
                </form>
                <form id="home" action="/" method="GET">
                    <button class="btn" id="home-btn" type="submit">Return to home screen</button>
                </form>
            </div>
        </div>
    </div>

